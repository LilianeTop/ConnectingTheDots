<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RetrievePasswordSceneController">
    <Label alignment="CENTER" layoutY="40.0" prefHeight="54.0" prefWidth="900.0" text="Connecting The Dots" textFill="#c61414">
        <font>
            <Font size="36.0" />
        </font>
    </Label>
    <Label alignment="TOP_CENTER" layoutY="87.0" prefHeight="29.0" prefWidth="900.0" text="To retrieve your password, please enter the emailaddress connected to your account.">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label layoutX="154.0" layoutY="129.0" text="Emailaddress:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="emailaddressForPasswordRetrieval" layoutX="286.0" layoutY="129.0" prefHeight="25.0" prefWidth="335.0" />
    <Button layoutX="646.0" layoutY="127.0" mnemonicParsing="false" onAction="#doSendLink" prefHeight="25.0" prefWidth="100.0" text="Send link">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
    <Button layoutX="350.0" layoutY="250.0" mnemonicParsing="false" onAction="#doLoginScene" prefHeight="25.0" prefWidth="200.0" text="Return to login">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
    <Label layoutX="154.0" layoutY="157.0" prefHeight="29.0" prefWidth="900.0" text="A link will be send to this emailaddress, to reset your password.">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
</AnchorPane>
