<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterSceneController">
    <Label alignment="CENTER" layoutY="40.0" prefHeight="54.0" prefWidth="900.0" text="Connecting The Dots" textFill="#c61414">
        <font>
            <Font size="36.0" />
        </font>
    </Label>
    <Label alignment="CENTER" layoutY="87.0" prefHeight="29.0" prefWidth="900.0" text="Please register to get access.">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <TextField fx:id="first_name" layoutX="286.0" layoutY="150.0" prefHeight="25.0" prefWidth="335.0" />
    <Label layoutX="154.0" layoutY="150.0" text="First name:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="prefix" layoutX="286.0" layoutY="175.0" prefHeight="25.0" prefWidth="335.0" />
    <Label layoutX="154.0" layoutY="175.0" text="Prefix:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="last_name" layoutX="286.0" layoutY="200.0" prefHeight="25.0" prefWidth="335.0" />
    <Label layoutX="154.0" layoutY="200.0" text="Last name:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="emailaddress" layoutX="286.0" layoutY="225.0" prefHeight="25.0" prefWidth="335.0" />
    <Label layoutX="154.0" layoutY="225.0" text="Emailaddress:">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
