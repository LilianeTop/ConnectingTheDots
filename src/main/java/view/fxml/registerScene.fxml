        <font>
            <Font size="18.0" />
        </font>
    </Label>
   <RadioButton fx:id="reader" layoutX="286.0" layoutY="255.0" mnemonicParsing="false" text="I am a reader" />
   <RadioButton fx:id="commenter" layoutX="386.0" layoutY="255.0" mnemonicParsing="false" text="I am a commenter" />
   <RadioButton fx:id="storyteller" layoutX="515.0" layoutY="255.0" mnemonicParsing="false" text="I am a storyteller" />
    
    <Button alignment="CENTER" layoutX="398.0" layoutY="300.0" mnemonicParsing="false" onAction="#doRegister" prefHeight="32.0" prefWidth="106.0" text="Register">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
    <Button  alignment="CENTER" layoutX="350.0" layoutY="350.0" mnemonicParsing="false" onAction="#doLoginScene" prefHeight="25.0" prefWidth="200.0" text="Return to login">
        <font>
            <Font size="16.0" />
        </font>
    </Button>
</AnchorPane>
